alias cdd="cd /mnt/c/Users/$(ls /mnt/c/Users | grep -v 'All Users\|Default\|Default User\|desktop.ini\|Public')/Downloads"
alias crontab="crontab -i"
alias ej="trans :ja"
alias ffmpeg="ffmpeg -hide_banner"
alias ffplay="ffplay -hide_banner"
alias ffprobe="ffprobe -hide_banner"
# gitで新しいbranchを作成する前に、分岐元branchを自動でpull
alias gcb="git rev-parse --symbolic-full-name --abbrev-ref @{u} 2>/dev/null && git pull && git checkout -b "

alias history="fc -fl 1"
alias je="trans :en"
alias lal="ls -Al"
alias ll="ls -l"
alias rm="rm -f" # 別の場所でのalias設定で、ファイル削除時毎回確認されることを抑止
alias tt="taskwarrior-tui"
alias xc="xclip -selection clipboard"
